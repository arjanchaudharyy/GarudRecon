# GarudRecon Environment Variables
# Copy this file to .env and update the values

# Flask Configuration
FLASK_ENV=production
SECRET_KEY=change-this-to-a-random-secret-key-use-python-secrets-module

# Application
HOST=127.0.0.1
PORT=5000

# CORS - Comma separated list of allowed origins
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Scan Configuration
MAX_CONCURRENT_SCANS=5
SCAN_TIMEOUT=7200
SCANS_DIR=scans

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/garudrecon.log

# Gunicorn
GUNICORN_BIND=127.0.0.1:5000
GUNICORN_WORKERS=4
GUNICORN_ACCESS_LOG=logs/gunicorn_access.log
GUNICORN_ERROR_LOG=logs/gunicorn_error.log
GUNICORN_LOG_LEVEL=info
